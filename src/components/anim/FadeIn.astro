---
// Props (optional): duration, delay
const { duration = '1s', delay = '0s', class: ClassName } = Astro.props;
---

<style>
  .fade-in {
    opacity: 0;
    animation: fadeInAnimation var(--fade-duration, 1s) ease-in-out var(--fade-delay, 0s) forwards;
  }

  @keyframes fadeInAnimation {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

<div
  class:list={["fade-in", ClassName]}
  style={`--fade-duration: ${duration}; --fade-delay: ${delay};`}
>
  <slot />
</div>
