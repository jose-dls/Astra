---
import { ModeToggle } from "./ModeToggle";
import Socials from "./Socials.astro";

const today = new Date();
---

<footer
	class="w-full bg-lm-ft dark:bg-dm-ft m-0 h-20 flex flex-row gap-1 justify-center items-center content-center px-5"
>
	<div class="flex-grow"></div>
	<div
		class="center-col flex-grow flex flex-col gap-1 justify-center items-center content-center"
	>
		<Socials />
		<p>&copy; {today.getFullYear()} Your name here. All rights reserved.</p>
	</div>
	<div class="flex-grow flex flex-row justify-end">
		<ModeToggle client:load />
	</div>
</footer>
