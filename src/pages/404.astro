---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseBody from "../layouts/BaseBody.astro";
import FadeMove from "@/components/anim/FadeMove.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<BaseBody class="gap-10">
		<Header />
		<main class="max-w-[70vw] py-10">
			<FadeMove direction="right">
				<h1 class="text-[150px]">404</h1>
			</FadeMove>
			<FadeMove direction="left">
				<p class="w-full text-center">Oops, this page does not exist.</p>
				<a href="/">
					<p class="w-full text-center underline">Go Home</p>
				</a>
			</FadeMove>
		</main>
		<Footer />
	</BaseBody>
</html>
