---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseBody from "../layouts/BaseBody.astro";
import FadeMove from "@/components/anim/FadeMove.astro";
import PostsCarousel from "@/components/PostsCarousel.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<BaseBody class="gap-10">
		<Header class="fixed top-0" />
		<div
			id="hero-section"
			class="max-w-[70vw] md:max-w-[50vw] h-screen flex flex-col gap-10 items-center justify-center"
		>
			<div
				class="w-[320px] h-[320px] bg-[#186213] dark:bg-[#131862] rounded-[100%] absolute z-[-1] blur-[200px] transition-all"
			>
			</div>
			<FadeMove direction="down" class="">
				<h1 class="text-7xl text-center font-[1000]">
					ASTRA
				</h1>
			</FadeMove>
			<FadeMove direction="right">
				<p class="text-justify">
					An Astro blog template with a focus on simplicity and ease
					of use. Built with Tailwind CSS, a little bit of React,
					and ready to be customised to your liking.
				</p>
			</FadeMove>
			<FadeMove direction="up">
				<div
					class="flex flex-col md:flex-row gap-5 items-stretch justify-center"
				>
					<a href="https://github.com/jose-dls/Astra" target="_blank">
						<button
							type="button"
							class="h-full w-full outline p-4 rounded-full bg-lm-txt dark:bg-dm-txt text-lm-bg dark:text-dm-bg flex flex-row justify-between items-center gap-5 cursor-pointer"
						>
							<svg
								viewBox="0 0 16 16"
								aria-hidden="true"
								width="32"
								height="32"
							>
								<path
									fill="currentColor"
									d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
								>
								</path>
							</svg>
							<p>See The Code</p>
						</button>
					</a>
					<a href="/blog">
						<button
							type="button"
							class="h-full w-full outline p-4 rounded-full flex flex-row justify-between items-center gap-5 cursor-pointer"
							>Check Out The Blog</button
						>
					</a>
				</div>
			</FadeMove>
		</div>
		<main class="max-w-[70vw] py-10 flex flex-col gap-40">
			<div class="flex flex-col gap-10">
				<FadeMove direction="down">
					<h1 class="text-7xl text-center font-[1000]">
						Recent Posts
					</h1>
				</FadeMove>
				<FadeMove direction="up">
					<PostsCarousel />
				</FadeMove>
			</div>
		</main>
		<Footer />
	</BaseBody>
</html>
